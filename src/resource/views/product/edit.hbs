<form method="post" action="/product/{{product._id}}?_method=PUT">
<h3>Update Product</h3>
  <div class="form-group">
    <label for="name">Product Name: </label>
    <input type="text" class="form-control" name="name" id="name" placeholder="Enter Name product" value="{{ product.name}}">
  </div>

  <div class="form-group">
    <label for="desc">Destributed: </label>
    <input type="text" class="form-control" name="destributed" id="destributed" placeholder=" Description" value="{{ product.destributed}}">
  </div>

  <div class="form-group">
    <label for="img">Img Link: </label>
    <input type="text" class="form-control" name="img" id="img" placeholder="Enter Img Link" value="{{ product.img}}">
  </div>

  <div class="form-group">
    <label for="price">Price: </label>
    <input type="number" class="form-control" name="price" id="price" placeholder="Enter Price" value="{{ product.price}}">
  </div>

  <div class="form-group">
      <select class="form-control form-control-sm " name="type" required="true">
        <option value="value="{{ product.type }}"">---Loại sản phẩm---</option>
        <option value="dts">Đèn trợ sáng</option>
        <option value="balo">Balo</option>
        <option value="nhot">Nhớt</option>
      </select>
    </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>